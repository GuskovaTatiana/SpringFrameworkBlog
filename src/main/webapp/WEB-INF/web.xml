<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Spring-приложение, запускаемое в контейнере сервлетов</display-name>
    <servlet>
        <!-- Имя и класс основного сервлета приложения-->
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

        <!-- Настройка Spring-контекста и Java-конфигурации -->
        <init-param>
            <param-name>contextClass</param-name>
            <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
        </init-param>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>ru.yandex.practicum.WebConfiguration</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>

        <multipart-config>
            <location>/tmp</location>  <!-- Temporary location (optional) -->
            <max-file-size>10485760</max-file-size>  <!-- 10MB -->
            <max-request-size>10485760</max-request-size> <!-- 10MB -->
            <file-size-threshold>1024</file-size-threshold> <!-- 1KB -->
        </multipart-config>

    </servlet>

    <context-param>
        <param-name>path_to_image</param-name>
        <param-value>/images</param-value>
    </context-param>

    <!-- DispatcherServlet обрабатывает все запросы -->
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>